<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:columnCount="3" android:rowCount="1"
             android:orientation="vertical" android:id="@+id/problem_incorrect_layout">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText" android:layout_column="0" android:layout_row="0" android:text="@string/Problem_Column"
            android:inputType="text"/>   
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2" android:text="@string/Missed_Column"
            android:inputType="text"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3" android:text="@string/Answer_Column" android:singleLine="false"
            android:inputType="text"/>
</GridLayout>